<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PetHotel_Padeanu_Andreea.Pages.RegisterPage"
             Title="Înregistrare">
    <AbsoluteLayout>
        <Image Source="poza2.jpeg" Aspect="AspectFill" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1" />

        <Frame Padding="20"
               CornerRadius="20"
               BackgroundColor="White"
               AbsoluteLayout.LayoutFlags="PositionProportional"
               AbsoluteLayout.LayoutBounds="0.5,0.5,-1,-1"
               HasShadow="True">
            <StackLayout Spacing="15">
                <Entry x:Name="emailEntry" Placeholder="Email" />
                <Entry x:Name="passwordEntry" Placeholder="Parolă" IsPassword="True"/>
                <Entry x:Name="nameEntry" Placeholder="Nume" />
                <Entry x:Name="phoneEntry" Placeholder="Telefon" />
                <Entry x:Name="addressEntry" Placeholder="Adresă" />

                <Button Text="Înregistrare" Clicked="OnRegisterButtonClicked"/>
            </StackLayout>
        </Frame>
    </AbsoluteLayout>
</ContentPage>
