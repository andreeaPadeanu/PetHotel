<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PetHotel_Padeanu_Andreea.Pages.AddPetPage"
             Title="Adăugare Animal de Companie">
    <StackLayout Padding="10">
        <Entry Placeholder="Nume" x:Name="nameEntry" />
        <Entry Placeholder="Tip" x:Name="typeEntry" />
        <Entry Placeholder="Culoare" x:Name="colorEntry" />
        <Entry Placeholder="Rasă" x:Name="raceEntry" />
        <Entry Placeholder="Alergii" x:Name="allergiesEntry" />
        <Button Text="Salvează" Clicked="OnSaveClicked" />
    </StackLayout>
</ContentPage>
