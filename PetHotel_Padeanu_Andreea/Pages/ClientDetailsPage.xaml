<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PetHotel_Padeanu_Andreea.Pages.ClientDetailsPage"
             Title="Detalii Client">

    <StackLayout Padding="10">
         <Entry x:Name="emailEntry" Placeholder="Email" />
        <Entry x:Name="nameEntry" Placeholder="Nume" />
        <Entry x:Name="phoneEntry" Placeholder="Telefon" />
        <Entry x:Name="addressEntry" Placeholder="Adresă" />

        <Button Text="Actualizează" Clicked="OnUpdateClicked"/>
    </StackLayout>
</ContentPage>
