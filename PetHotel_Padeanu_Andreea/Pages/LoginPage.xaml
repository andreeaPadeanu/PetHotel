<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PetHotel_Padeanu_Andreea.Pages.LoginPage"
             Title="Conectare">
    <AbsoluteLayout>
        <Image Source="poza2.jpeg" Aspect="AspectFill" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1" />

        <Frame Padding="20"
               CornerRadius="20"
               BackgroundColor="White"
               AbsoluteLayout.LayoutFlags="PositionProportional"
               AbsoluteLayout.LayoutBounds="0.5,0.5,-1,-1"
               HasShadow="True">
            <StackLayout Spacing="15">
                <Entry x:Name="emailEntry" Placeholder="Email"/>
                <Entry x:Name="passwordEntry" Placeholder="Parolă" IsPassword="True"/>
                <Button Text="Conectare" Clicked="OnLoginClicked"/>
                <Button Text="Nu ai cont? Înregistrează-te" Clicked="OnRegisterClicked"/>
            </StackLayout>
        </Frame>
    </AbsoluteLayout>
</ContentPage>
